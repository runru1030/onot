<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DonationActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="0">

        <ImageView
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/black" />

        <Button
            android:id="@+id/search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/searchbutton"
            android:padding="0sp"
            android:scaleType="fitCenter" />

        <Button
            android:id="@+id/bell"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/search"
            android:background="@drawable/bellbutton" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        `
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/ridibatang"
                    android:text="당신과 온옷이 만들어 낸 특별한 기부"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boxline"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_marginTop="50dp"
                        android:background="@android:color/darker_gray"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="9월"
                        android:textSize="20dp"
                        android:fontFamily="@font/junggt"
                        android:gravity="center"
                        android:layout_marginTop="10dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="50dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="[ 서울 복지관 ]"
                            android:textSize="20dp"
                            android:fontFamily="@font/junggt"
                            android:textColor="@android:color/black"
                            android:gravity="center"
                            android:layout_marginTop="30dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="기부 날짜 : 2019.10.01"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/junggt"
                            android:textColor="@android:color/black"
                            android:layout_marginTop="30dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="기부 장소 : 서울시 동작구 상도동 서울복지관"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/junggt"
                            android:textColor="@android:color/black"
                            android:layout_marginTop="10dp"/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/love"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/junggt"
                            android:text="이번 달 저희 온옷 봉사팀은 동작구에 위치한 \n서울 복지관에 기부하게 되었습니다.\n\n사랑 복지관에는 어린 아이들이 많아서\n요즘 추워진 날씨에 저희는 내복과 외투 등\n 방한용품 위주로 기부하게 되었습니다. "
                            android:textColor="@android:color/black"
                            android:gravity="center"
                            android:textSize="15dp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/dimage1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="고객님들의 기부금으로 옷을 받은 \n 아이들의 설레이는 표정에 저희 온옷 또한 \n 고객님들께 다시 한번 감사의 마음이 들었습니다.\n\n 변치않는 온옷이 되겠습니다."
                            android:textSize="15dp"
                            android:fontFamily="@font/junggt"
                            android:textColor="@android:color/black"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"

                            android:layout_marginTop="20dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="총 기부금액 : 5.000,000원"
                            android:textSize="15dp"
                            android:fontFamily="@font/junggt"
                            android:textColor="@android:color/black"
                            android:layout_marginLeft="10dp"

                            android:layout_marginTop="20dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="기부물품 내역: \n내복-30벌, 외투-40벌 , 양말-40개 등"
                            android:textSize="15dp"
                            android:fontFamily="@font/junggt"
                            android:textColor="@android:color/black"
                            android:layout_marginLeft="10dp"

                            android:layout_marginTop="20dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="[기부자 명단]\n\n 눈송이님 | runru님 | 지현님 | 잡채님 | c1Blue님 | 리아지아님 | Jihye_han님 | 기부를JAVA님 | cool님 | "
                            android:textSize="15dp"
                            android:fontFamily="@font/junggt"
                            android:layout_marginLeft="10dp"

                            android:layout_marginTop="20dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="/한달 총 기부금액이 2만원 이상이신 고객님들의 아이디로 기부됩니다./\n\n"
                            android:textSize="15dp"
                            android:fontFamily="@font/junggt"
                            android:layout_marginLeft="10dp"

                            android:layout_marginTop="20dp"/>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <!-- 구분선-->
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#BDBDBD" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:baselineAligned="false"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/cloth"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/clothbutton" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:fontFamily="@font/ridibatang"
                    android:gravity="center"
                    android:text="마켓" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/heart"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/heartbutton" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:fontFamily="@font/ridibatang"
                    android:gravity="center"
                    android:text="활동" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/plus"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/plusbutton" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:fontFamily="@font/ridibatang"
                    android:gravity="center"
                    android:text="글쓰기" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/ranking"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/kgbutton" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:fontFamily="@font/ridibatang"
                    android:gravity="center"
                    android:text="랭킹" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/mypage"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/peoplebutton" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:fontFamily="@font/ridibatang"
                    android:gravity="center"
                    android:text="마이" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>



